<h1>Your questions (shown to the other person)</h1>

<p>
  Logged in as: <strong><%= current_user.name %></strong> |
  <%= link_to "Today", today_path %> |
  <%= button_to "Log out", destroy_user_session_path, method: :delete %>
</p>

<h2>Add a question</h2>
<%= form_with model: @question do |f| %>
  <%= f.text_area :body, rows: 3, placeholder: "Write a question..." %><br>
  <%= f.submit "Add" %>
<% end %>

<% if @question.errors.any? %>
  <ul>
    <% @question.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<hr>

<ul>
  <% @questions.each do |q| %>
    <li style="margin-bottom: 8px;">
      <%= q.body %>
      <%= button_to "Delete", question_path(q), method: :delete, form: { style: "display:inline" } %>
    </li>
  <% end %>
</ul>
